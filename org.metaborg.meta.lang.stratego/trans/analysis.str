strategies
  
  record-all-module-names =
    record-all-definitions(
        record-module-name
      , parse-stratego_sugar-string; basic-desugar-top
      | "str"
    )
  
  record-module-name =
    ?Module(mname, _);
    rules(ModuleName : mname -> mname)
  
  record-all-definitions(record, parse|ext) = 
    stratego_sugar-source-and-include-files;
    list-loop(
      try(record-definitions(record, parse|ext))
    )
  
  record-definitions(record, parse|ext):
    filename -> filename
    where
      <has-extension(|ext)> filename;
      <open-import(
        abspath, 
        parse, 
        record
     )> filename
